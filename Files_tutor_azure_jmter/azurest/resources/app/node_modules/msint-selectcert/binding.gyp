{
    "targets": [
        {
            "target_name": "selectcert",
            "include_dirs": [
                "<!(node -e \"require('nan')\")"
            ],
            "sources": [
                "src/selectcert.cc"
            ],
            "conditions": [
                [
                    "OS == 'mac'",
                    {
                        "sources": [
                            "src/selectcert_mac.cc"
                        ]
                    }
                ],
                [
                    "OS == 'win'",
                    {
                        "sources": [
                            "src/selectcert_win.cc"
                        ],
                        "libraries": [
                            "crypt32.lib",
                            "cryptui.lib"
                        ]
                    }
                ],
                [
                    "OS not in ['mac','win']",
                    {
                        "sources": [
                            "src/selectcert_posix.cc"
                        ]
                    }
                ]
            ]
        }
    ]
}